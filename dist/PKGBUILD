# Maintainer: Michael Schubert <mschu.dev at gmail>
pkgname=python-supersolids
pkgver=0.1.2
pkgrel=1
pkgdesc="Notes and script to supersolids"
url="https://test.pypi.org/simple/supersolids"
arch=('x86_64')
license=('MIT')
depends=('python-matplotlib' 'python-numpy' 'python-scipy' 'python-sympy')
makedepends=('cython')
optdepends=('')
source=(supersolids-$pkgver.tar.gz::"https://test-files.pythonhosted.org/packages/53/b1/47033f43de210af12277540a915c334c75f4ae2d2ca332510d26dd30d648/supersolids-$pkgver.tar.gz")
sha256sums=("SKIP")

build() {
  cd "$srcdir/supersolids-$pkgver"
  python setup.py build
}

check_disabled() { #ERROR: TypeError None is not callable
  cd "$srcdir/supersolids-$pkgver"
  python setup.py test
}

package() {
  cd "$srcdir/supersolids-$pkgver"
  python setup.py install --skip-build --prefix=/usr --root="$pkgdir" --optimize=1
}
